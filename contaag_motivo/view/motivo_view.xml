<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_motivo" model="ir.ui.view">
            <field name="name">motivo</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//div[@name = "motivo"]" position="after">
                	<field name="motivo" string="Motivo"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
